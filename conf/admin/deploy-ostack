#!/bin/bash

if [ ! -z "$1" ]; then
    INVENTORY="/root/kolla/share/kolla-ansible/ansible/inventory/multinode-$1"
else
    INVENTORY="/root/kolla/share/kolla-ansible/ansible/inventory/multinode"
fi

source /root/kolla/bin/activate

# A単adido por Pablo. Generar certificados de Octavia
kolla-ansible octavia-certificates 

kolla-ansible -i $INVENTORY --configdir /etc/kolla bootstrap-servers

# A単adido por Pablo. Cambiar version del paquete bcrypt para evitar errores en el despliegue de Prometheus
for i in controller network compute1 compute2 compute3; do ssh $i pip install --force-reinstall --user bcrypt==4.0.1; done

# A単adido por Pablo. Configuracion de los anillos de Swift
./rings-swift

kolla-ansible -i $INVENTORY --configdir /etc/kolla prechecks

kolla-ansible -i $INVENTORY --configdir /etc/kolla deploy
kolla-ansible post-deploy

# A単adido por Pablo. Configuracion de Trove
./conf-trove
kolla-ansible -i $INVENTORY --configdir /etc/kolla reconfigure -t trove
